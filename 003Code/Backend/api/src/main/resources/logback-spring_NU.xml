<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appenders -->
    <appender name="fileAppender" class="ch.qos.logback.core.FileAppender">
        <file>log/error/error.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger -->
    <logger name="com.hanbat.zanbanzero.auth.jwt.filter" level="WARN" additivity="false">
        <appender-ref ref="fileAppender" />
    </logger>

    <logger name="com.hanbat.zanbanzero.auth.login.filter.LoginFilter" level="WARN" additivity="false">
        <appender-ref ref="fileAppender" />
    </logger>

    <logger name="com.hanbat.zanbanzero.auth.login.filter.KeycloakLoginFilter" level="WARN" additivity="false">
        <appender-ref ref="fileAppender" />
    </logger>

    <logger name="com.hanbat.zanbanzero.service" level="WARN" additivity="false">
        <appender-ref ref="fileAppender" />
    </logger>

    <logger name="com.hanbat.zanbanzero.controller" level="WARN" additivity="false">
        <appender-ref ref="fileAppender" />
    </logger>

    <root level="INFO">
        <appender-ref ref="consoleAppender" />
    </root>
</configuration>
